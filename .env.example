# VoxPersona Environment Configuration with Enhanced MinIO Integration

# ==============================================
# Telegram API Configuration
# ==============================================
API_ID=your_telegram_api_id
API_HASH=your_telegram_api_hash
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
SESSION_BOT_NAME=voxpersona_bot
PASSWORD=your_admin_password

# ==============================================
# AI Service Configuration
# ==============================================
# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_BASE_URL=https://api.openai.com/v1
TRANSCRIBATION_MODEL_NAME=whisper-1

# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key
ANTHROPIC_API_KEY_2=your_anthropic_api_key_2
ANTHROPIC_API_KEY_3=your_anthropic_api_key_3
ANTHROPIC_API_KEY_4=your_anthropic_api_key_4
ANTHROPIC_API_KEY_5=your_anthropic_api_key_5
ANTHROPIC_API_KEY_6=your_anthropic_api_key_6
ANTHROPIC_API_KEY_7=your_anthropic_api_key_7
REPORT_MODEL_NAME=claude-3-7-sonnet-20250219

# ==============================================
# Database Configuration
# ==============================================
DB_NAME=voxpersona_db
DB_USER=voxpersona_user
DB_PASSWORD=secure_database_password_2025
DB_HOST=postgres
DB_PORT=5432

# ==============================================
# MinIO Object Storage Configuration
# ==============================================
# MinIO Connection Settings
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=voxpersona_admin_2025
MINIO_SECRET_KEY=SecureVoxPersona2025!@#$%
MINIO_USE_SSL=false

# MinIO Bucket Configuration
MINIO_BUCKET_NAME=voxpersona-storage
MINIO_AUDIO_BUCKET_NAME=voxpersona-audio

# ==============================================
# MinIO Health Check & Retry Configuration
# ==============================================
# Health check frequency in seconds
MINIO_HEALTH_CHECK_INTERVAL=60

# Retry mechanism settings
MINIO_MAX_RETRIES=3
MINIO_RETRY_BACKOFF=2.0

# ==============================================
# Storage Configuration
# ==============================================
# Maximum file size in bytes (2GB default)
MINIO_MAX_FILE_SIZE=2147483648

# File cleanup policy (delete files older than N days)
MINIO_CLEANUP_DAYS=30

# ==============================================
# Application Configuration
# ==============================================
# Application run mode (PROD/TEST)
RUN_MODE=PROD

# ==============================================
# Test Environment Configuration (for testing)
# ==============================================
# Test Database
TEST_DB_NAME=voxpersona_test_db
TEST_DB_USER=test_user
TEST_DB_PASSWORD=test_password
TEST_DB_HOST=localhost
TEST_DB_PORT=5432

# Test MinIO Buckets
MINIO_BUCKET_TEST_NAME=test-voxpersona-storage

# Test Telegram Bot
TELEGRAM_BOT_TOKEN_TEST=fake_test_token
SESSION_BOT_NAME_TEST=test_bot_session

# ==============================================
# Security Notes
# ==============================================
# 1. Use strong, unique passwords for all services
# 2. Rotate MinIO access keys regularly
# 3. Enable SSL in production (MINIO_USE_SSL=true)
# 4. Keep this file secure and never commit to version control
# 5. Use environment-specific configurations for different deployments

# ==============================================
# Performance Tuning (Optional)
# ==============================================
# Uncomment and adjust these values based on your needs:

# MinIO connection timeout (seconds)
# MINIO_CONNECT_TIMEOUT=10

# MinIO read timeout (seconds)
# MINIO_READ_TIMEOUT=30

# Maximum concurrent MinIO operations
# MINIO_MAX_CONNECTIONS=100

# Enable MinIO request logging (true/false)
# MINIO_ENABLE_LOGGING=false