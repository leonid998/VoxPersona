# VoxPersona Configuration Template
# Скопируйте этот файл в .env и заполните своими значениями

# Database Configuration
DB_NAME=bot_db
DB_USER=voxpersona_user
DB_PASSWORD=your_database_password_here
DB_HOST=localhost
DB_PORT=5432

# API Keys - получите на соответствующих платформах
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_API_KEY_2=your_second_anthropic_key_here
ANTHROPIC_API_KEY_3=your_third_anthropic_key_here
ANTHROPIC_API_KEY_4=your_fourth_anthropic_key_here
ANTHROPIC_API_KEY_5=your_fifth_anthropic_key_here
ANTHROPIC_API_KEY_6=your_sixth_anthropic_key_here
ANTHROPIC_API_KEY_7=your_seventh_anthropic_key_here

OPENAI_API_KEY=your_openai_api_key_here
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Telegram API Configuration
API_ID=your_telegram_api_id_here
API_HASH=your_telegram_api_hash_here

# Bot Configuration
SESSION_BOT_NAME=voxpersona_bot
OPENAI_BASE_URL=https://api.openai.com/v1
TRANSCRIBATION_MODEL_NAME=whisper-1
REPORT_MODEL_NAME=claude-3-7-sonnet-20250219
PASSWORD=your_bot_password_here
RUN_MODE=PROD

# MinIO Configuration (опционально)
MINIO_ENDPOINT=your_minio_endpoint_here
MINIO_BUCKET_NAME=your_bucket_name_here
MINIO_ACCESS_KEY=your_minio_access_key_here
MINIO_SECRET_KEY=your_minio_secret_key_here

# VseGPT API (опционально)
VSEGPT_API_KEY=your_vsegpt_api_key_here

